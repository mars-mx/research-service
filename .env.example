# Required
API_KEY=                        # Secret key for API authentication
OPENAI_API_KEY=                 # Required if LLM_PROVIDER=openai (the default)
ANTHROPIC_API_KEY=              # Required if LLM_PROVIDER=anthropic
GEMINI_API_KEY=                 # Required if LLM_PROVIDER=google or EMBEDDING_MODEL=google:...
TAVILY_API_KEY=                 # Tavily API key for web search
FIRECRAWL_API_KEY=              # Firecrawl API key (not needed if self-hosted without auth)
REDIS_URL=redis://localhost:6379  # Redis connection string
ALLOWED_CALLBACK_HOSTS=         # Comma-separated list of allowed callback URL hosts

# Optional
FIRECRAWL_API_URL=              # Self-hosted Firecrawl URL (default: Firecrawl cloud)
RESULT_TTL_SECONDS=3600         # How long results are cached (default: 1 hour)
LLM_PROVIDER=openai             # LLM provider for PydanticAI: openai, anthropic, google, ollama, etc.
FAST_LLM=gpt-4o-mini           # Model for fast operations
SMART_LLM=gpt-4o               # Model for deep reasoning
EMBEDDING_MODEL=                # Embedding model for context compression (default: openai:text-embedding-3-small)
MAX_DEPTH_TIER=deep             # Highest depth tier callers can use: quick, standard, or deep
LOG_LEVEL=INFO                  # Logging level
